{
  "name": "recipe-app",
  "version": "1.0.0",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.3.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "start:electron": "concurrently -k \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "productName": "Busy Bites",
    "directories": {
      "buildResources": "media"
    },
    "win": {
      "icon": "media/busy_bites_logo.ico"
    },
    "mac": {
      "icon": "media/busy_bites_logo.icns"
    },
    "linux": {
      "icon": "media/busy_bites_logo.png"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "Recipe desktop application using Spoonacular api",
  "main": "main.js",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^35.0.1",
    "wait-on": "^6.0.1"
  },
  "author": "Kendarius James",
  "license": "Modified MIT License - Non-Commercial Use Only (MIT-NC)"
}
